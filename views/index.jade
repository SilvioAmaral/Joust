extends layout

block body
  div(ng-controller='AppCtrl')
    h2 Hello {{name}},
    h1 Welcome to Joust - Smash tournaments in the face!
    ul.menu
      li
        a(href='tournaments') Tournaments
      li
        a(href='tournament/new') Add a tournament
      li
        a(href='competitors') Competitors
      li
        a(href='competitor/new') Add a competitor
    div(ng-view)

  script(src='js/lib/angular/angular.js')
  script(src='js/lib/angular/angular-resource.js')
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/controllers/tournament.js')
  script(src='js/controllers/competitor.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
