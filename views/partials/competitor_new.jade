div(ng-controller='CompetitorViewCtrl')
    p {{title}}

    p Add a competitor
        form(ng-submit="saveCompetitor(competitor)")
            input(type="submit", value="Add competitor")
    p
      div.row
        div.large-4.columns
          label name:
          input(type="text", ng-model="competitor.name")
          
        div.large-4.columns
          label email:
          input(type="text", ng-model="competitor.email")
        div.large-4.columns
          label type:
          input(type="text", ng-model="competitor.type")
